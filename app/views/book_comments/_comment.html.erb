
<% book.book_comments.each do |book_comment| %>
 <% book_comment_user = book_comment.user %>
  <tr>
    <td>
      <p><%= image_tag book_comment_user.get_profile_image, size:'50x50' %></p>
        <%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
    </td>

    <td>
      <%= book_comment.comment %>
      <% if book_comment.user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), class: "btn btn-sm btn-danger", method: :delete, remote: true %>
      <% end %>
    </td>

<% end %>
        


